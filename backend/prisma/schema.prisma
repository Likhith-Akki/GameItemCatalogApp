generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// enums 

enum ItemType {
  Weapon
  Armour
  PowerUps
}

enum Rarity {
  Common
  Rare
  Epic
  Legendary
}

// Item Model

model Item {
  id Int @id @default(autoincrement())
  name String
  type ItemType
  rarity Rarity
  levelRequirement Int
  description String?
  stats Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}